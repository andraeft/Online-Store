@model WebApplication1.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutEx1.cshtml";
}

<h2>Editare stire</h2>
<p>Afisare formular de editare stire - cu datele vechi ale stirii</p>
<form method="post" action="/Product/Edit/@Model.ProductId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <label>Titlu</label>
    <br />
    <input type="text" name="Title" value="@Model.Title" />
    <br /><br />
    <label>Continut</label>
    <br />
    <input type="text" name="Description" value="@Model.Description" />
    <br /><br />
    <label>Pret</label>
    <br />
    <input type="text" name="Price" value="@Model.Price" />
    <br /><br />
    <div class="col-md-10">
        <select name="CategoryId">
            @foreach (var cat in ViewBag.CategoryId)
            {
                if (cat.Name == Model.Category.Name)
                {
                    <option value="@cat.CategoryId" selected>@cat.Name</option>
                }
                else
                {
                    <option value="@cat.CategoryId">@cat.Name</option>
                }
            }
        </select>
    </div>
    <br />
    <button type="submit">Modifica stire</button>
</form>
