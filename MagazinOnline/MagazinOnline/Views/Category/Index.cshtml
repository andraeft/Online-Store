@{
    ViewBag.Title = "Lista categorii";
}
<h2>@ViewBag.Title</h2>
@foreach (var category in ViewBag.Category)
{
    <h3>@category.name</h3>
    <a class="btn btn-default" href="/Category/Show/@category.categoryId">Afisare categorie</a>
    <br />
    <hr />
    <br />
}
<a class="btn btn-default" href="/Category/New">Adauga alta categorie</a>
<br />