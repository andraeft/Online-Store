@{
    ViewBag.Title = "Afisare categorie";
}
<h1>@ViewBag.Category.name</h1>
<br />
<a class="btn btn-default" href="/Category/Edit/@ViewBag.Category.categoryId">Modifica categorie</a>
<form method="post" action="/Category/Delete/@ViewBag.Category.categoryId">
    @Html.HttpMethodOverride(HttpVerbs.Delete)
    <button class="btn btn-default" type="submit">Sterge categoria</button>
</form>
<hr />
<a class="btn btn-default" href="/Category/Index">Inapoi la lista categoriilor</a>
<br/> <br/>
<a class="btn btn-default" href="/Category/New">Adauga alta categorie</a>
<br />
